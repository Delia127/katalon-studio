{
	"manifest_version": 2,
	"name": "Katalon Utility",
	"description": "Firefox extension for Katalon",
	"version": "1.0.0.3",
	"permissions": ["http://*/", "https://*/", "storage", "tabs"],
	"icons": { "16": "images/branding_16.png",
           "48": "images/branding_48.png",
          "128": "images/branding_128.png" },
	"content_scripts": [
		{
		"all_frames": true,
		"matches": ["http://*/*", "https://*/*"],
		"match_about_blank": true,
		"js": ["jquery-2.2.4.min.js", "jquery.color-2.1.2.min.js", "constants.js", "firefox_variables_default.js", "firefox_variables_init.js", "firefox_common.js",
			"common.js", "record_common.js", "firefox_setup.js", "dom_inspector.js", "dom_collector.js", "dom_recorder.js", "process_element.js", "main.js"]
		}
	],
	"background": {
        "scripts": [ "constants.js", "firefox_variables_default.js", "firefox_variables_init.js", "firefox_common.js",  "background.js"]
    },
	"browser_action": {
		"default_icon": {
			"32": "images/branding_32.png"
		},
			"default_title": "Katalon Utility"
		},
	"options_ui": {
   		"page": "options.html"
	}
}